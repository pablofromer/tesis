edge(?X, ?Y) :- Path1(?X).
aux_1(?X,?Y) :- Path2(?X).
Path1(?Y) :- aux_1(?X,?Y).
edge(?X,?Y) :- aux_1(?X,?Y).

Q_0(?A) :- edge(?A,?B).
Q_1(?A) :- edge(?A,?B), edge(?B,?C).
Q_2(?A) :- edge(?A,?B), edge(?B,?C), edge(?C,?D).
Q_3(?A) :- edge(?A,?B), edge(?B,?C), edge(?C,?D), edge(?D,?E).
Q_4(?A) :- edge(?A,?B), edge(?B,?C), edge(?C,?D), edge(?D,?E), edge(?E,?F).

?- Q_0(?A).
?- Q_1(?A). 
?- Q_2(?A). 
?- Q_3(?A). 
?- Q_4(?A).
